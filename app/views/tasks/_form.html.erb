<%= form_with(model: task, local: true) do |f| %>
  <% #エラーメッセージ %>
  <%  if @task.errors.any? %>
    <div>
      <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <%= msg %>
        <% end %>
      </ul>
    </div>
  <% end %>
  <% #エラーメッセージ　ここまで %>
  
  
  <%=f.label :content ,"タスク" %>
  <%= f.text_field  :content %>
  
  <%= f.label :status , "状態" %>
  <%= f.text_field  :status %>
  
  <%= f.submit "追加する" %>
<% end %>